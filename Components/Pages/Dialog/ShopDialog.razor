@inject NavigationManager nav
<MudDialog>
    <DialogContent  >
        <MudElement Class="d-flex flex-column justify-content-center align-items-center pb-3

">

            <MudIcon Class="shop-icon-medium" Icon="@ShopIcon.Thumb" @onclick="Submit" />
            <MudText>You are done!</MudText>
        </MudElement>
    </DialogContent>

</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
        nav.NavigateTo("/counter");
    }
    void Cancel() => MudDialog.Cancel();
}
