@inherits LayoutComponentBase
@inject NavigationManager nav

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudMainContent Class="mb-15 page">
        @Body
    </MudMainContent>

    <MudTabs Class="tabs-container" MaxHeight="3" Elevation="4" Rounded="true" Centered="true" Color="@Color.Transparent">
        <MudTabPanel Class="pl-9" Text="Recipe" Icon="@Icons.Outlined.FoodBank" BadgeColor="Color.Secondary" OnClick="@( () =>  NavigateWithAnimation("/"))" />
        <MudTabPanel Class="n1" Text="List" Icon="@Icons.Outlined.FormatListBulleted" BadgeColor="Color.Secondary" OnClick="@( () =>   NavigateWithAnimation("/counter"))" />
        <MudTabPanel Class="pr-9" Text="Shop" Icon="@Icons.Outlined.ShoppingCart" BadgeColor="Color.Secondary" OnClick="@( () =>  NavigateWithAnimation("/weather"))" />
    </MudTabs>

</MudLayout>

@code {
    private  void NavigateWithAnimation(string url)
    {
         nav.NavigateTo(url);
    }
    
}
