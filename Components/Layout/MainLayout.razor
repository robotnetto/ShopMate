@inherits LayoutComponentBase
@inject NavigationManager nav
@inject IJSRuntime JS

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Class="mb-15">
        @Body
    </MudMainContent>

    <MudTabs Class="tabs-container" MaxHeight="3" Elevation="4" Rounded="true" Centered="true" Color="@Color.Transparent">
        <MudTabPanel Class="pl-9" Text="Recipe" Icon="@Icons.Outlined.FoodBank" BadgeColor="Color.Secondary" OnClick="@(async () => await NavigateWithAnimation("/"))" />
        <MudTabPanel Class="n1" Text="List" Icon="@Icons.Outlined.FormatListBulleted" BadgeColor="Color.Secondary" OnClick="@(async () => await NavigateWithAnimation("/counter"))" />
        <MudTabPanel Class="pr-9" Text="Shop" Icon="@Icons.Outlined.ShoppingCart" BadgeColor="Color.Secondary" OnClick="@(async () => await NavigateWithAnimation("/weather"))" />
    </MudTabs>
 
</MudLayout>

@code {
    private bool settingsDrawer = false;
    private bool editRecipeDrawer = false;
    private async Task NavigateWithAnimation(string url)
    {
        await JS.InvokeVoidAsync("navigateWithAnimation", url);
    }
}
